<h1>
  List of All Directors
</h1>

<hr>

<div>
  <%= link_to "Add a new director",new_director_path %>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Date of Birth
    </th>

    <th>
      Biography
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <%= director.bio %>
    </td>

    <td>
      <%= time_ago_in_words(director.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(director.updated_at) %> ago
    </td>

    <td>

      <%= link_to "Show details", movie%>
    </td>
  </tr>
  <% end %>
</table>
